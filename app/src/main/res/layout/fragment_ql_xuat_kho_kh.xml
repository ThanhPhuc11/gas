<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:text="Khách hàng"
            android:textColor="@color/gray_404A57"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edtKH"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_border_nomal"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:focusable="false"
            android:hint="Chọn Khách hàng"
            android:paddingHorizontal="13dp"
            android:singleLine="true"
            android:textColor="@color/blue_2C5181"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:text="Loại yêu cầu"
            android:textColor="@color/gray_404A57"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edtLoaiYeuCau"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_border_nomal"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:focusable="false"
            android:text="Bán tổng đại lý trực tiếp"
            android:hint="Chọn loại yêu cầu"
            android:paddingHorizontal="13dp"
            android:singleLine="true"
            android:textColor="@color/blue_2C5181"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:text="Trạng thái xuất hàng"
            android:textColor="@color/gray_404A57"
            android:textSize="@dimen/text_14sp" />

        <EditText
            android:id="@+id/edtTrangThaiXuatHang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_border_nomal"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:focusable="false"
            android:paddingHorizontal="13dp"
            android:singleLine="true"
            android:textColor="@color/blue_2C5181"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Từ ngày"
                    android:textColor="@color/gray_404A57"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_border_nomal"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:focusable="false"
                    android:paddingHorizontal="13dp"
                    android:singleLine="true"
                    android:text="28/10/2020"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:text="Đến ngày"
                    android:textColor="@color/gray_404A57"
                    android:textSize="@dimen/text_14sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_border_nomal"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:focusable="false"
                    android:paddingHorizontal="13dp"
                    android:singleLine="true"
                    android:text="11/11/2020"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginHorizontal="42dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_border_login"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Kết quả tìm kiếm"
            android:textColor="@color/blue_2C5181"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="9dp" />


    </LinearLayout>
</LinearLayout>