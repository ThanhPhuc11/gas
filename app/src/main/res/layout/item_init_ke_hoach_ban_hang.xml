<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue_F1F5F8"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="Khách hàng *"
            android:textColor="@color/blue_2C5181"
            android:textSize="@dimen/text_14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtLXBH"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_border_nomal_2"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:focusable="false"
            android:paddingHorizontal="13dp"
            android:singleLine="true"
            android:text="Chọn khách hàng"
            android:textColor="@color/blue_2C5181"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="Tần suất lốt"
            android:textColor="@color/blue_2C5181"
            android:textSize="@dimen/text_14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTanSuat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/bg_border_nomal_2"
            android:hint="Nhập tần suất lốt"
            android:inputType="number"
            android:maxLength="3"
            android:paddingHorizontal="13dp"
            android:singleLine="true"
            android:textColor="@color/blue_2C5181"
            android:textColorHint="@color/blue_2C5181"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_border_nomal_top_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="mặt hàng"
                android:textAllCaps="true"
                android:textColor="@color/blue_2C5181"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_DCE0EA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Số lượng"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="@color/blue_2C5181"
                android:textSize="13sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_DCE0EA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Giá"
                android:textAllCaps="true"
                android:textColor="@color/blue_2C5181"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="7dp"
                android:text="Khí 12Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtQuantityGas12"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edtPriceGas12"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_nomal_coner_4"
                android:inputType="number"
                android:maxLength="9"
                android:textAlignment="center"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_DCE0EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="7dp"
                android:text="Khí 45Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtQuantityGas45"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edtPriceGas45"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_nomal_coner_4"
                android:inputType="number"
                android:maxLength="9"
                android:textAlignment="center"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_DCE0EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white_ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="7dp"
                android:text="Vỏ 12Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtQuantityTank12"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edtPriceTank12"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_nomal_coner_4"
                android:inputType="number"
                android:maxLength="9"
                android:textAlignment="center"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_DCE0EA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="7dp"
                android:text="Vỏ 45Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtQuantityTank45"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:id="@+id/edtPriceTank45"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_border_nomal_coner_4"
                android:inputType="number"
                android:maxLength="9"
                android:textAlignment="center"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>