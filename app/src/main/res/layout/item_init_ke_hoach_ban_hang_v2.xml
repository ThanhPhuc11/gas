<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue_F1F5F8"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tvCustName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- -"
                android:textAllCaps="true"
                android:textColor="@color/blue_2C5181"
                android:textSize="13sp"
                android:textStyle="bold"
                app:drawableEndCompat="@drawable/ic_arrow_down_circle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWrapContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="7dp"
                    android:text="Khí 12Kg"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="@dimen/text_13sp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edtQuantityGas12"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_border_nomal_coner_4"
                        android:hint="Nhập SL"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textAlignment="center"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/text_13sp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edtPriceGas12"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:completionThreshold="1"
                    android:hint="Nhập giá"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_DCE0EA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="7dp"
                    android:text="Khí 45Kg"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="@dimen/text_13sp" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edtQuantityGas45"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_border_nomal_coner_4"
                        android:hint="Nhập SL"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textAlignment="center"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/text_13sp" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/edtPriceGas45"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_border_nomal_coner_4"
                    android:completionThreshold="1"
                    android:hint="Nhập giá"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textAlignment="center"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/text_13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_DCE0EA" />

            <LinearLayout
                android:id="@+id/llWarpFullContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/white_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="7dp"
                        android:text="Vỏ 12Kg"
                        android:textColor="@color/blue_2C5181"
                        android:textSize="@dimen/text_13sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/edtQuantityTank12"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_border_nomal_coner_4"
                            android:hint="Nhập SL"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textAlignment="center"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtPriceTank12"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_nomal_coner_4"
                        android:completionThreshold="1"
                        android:hint="Nhập giá"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textAlignment="center"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/text_13sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_DCE0EA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="7dp"
                        android:text="Vỏ 45Kg"
                        android:textColor="@color/blue_2C5181"
                        android:textSize="@dimen/text_13sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/edtQuantityTank45"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_border_nomal_coner_4"
                            android:hint="Nhập SL"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textAlignment="center"
                            android:textColor="@color/gray_333333"
                            android:textSize="@dimen/text_13sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/edtPriceTank45"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_border_nomal_coner_4"
                        android:completionThreshold="1"
                        android:hint="Nhập giá"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textAlignment="center"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/text_13sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgCollapse"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white_ffffff"
                android:paddingVertical="5dp"
                android:src="@drawable/ic_max" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>