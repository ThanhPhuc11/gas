                        app:hinhAnh="vo"
                        app:soLuong=""
                        app:tenSanPham="Vỏ 45Kg" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_E7E7E7" />

            <!--Bán vỏ-->
