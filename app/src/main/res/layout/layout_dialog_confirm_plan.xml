<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_border_nomal"
    android:backgroundTint="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="15dp"
        android:src="@drawable/ic_close" />

    <TextView
        style="@style/textStyleH6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận KH bán hàng"
        android:textColor="@color/blue_2C5181" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_body"
        android:orientation="vertical"
        android:paddingHorizontal="7dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lượng khí 12Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/tvGas12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- -"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lượng khí 45Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/tvGas45"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- -"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lượng vỏ 12Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/tvTank12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- -"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Số lượng vỏ 45Kg"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />

            <TextView
                android:id="@+id/tvTank45"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- -"
                android:textColor="@color/blue_2C5181"
                android:textSize="@dimen/text_13sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_login_1"
            android:text="Huỷ"
            android:textAllCaps="true"
            android:textColor="@color/blue_2C5181" />

        <Button
            android:id="@+id/btnDongY"
            android:layout_width="0dp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"
            android:background="@drawable/bg_border_login"
            android:text="Đồng ý"
            android:textAllCaps="true"
            android:textColor="@color/white_ffffff"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
