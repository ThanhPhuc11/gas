<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="Trạm"
                android:textColor="@color/gray_404A57"
                android:textSize="@dimen/text_14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_border_nomal"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:paddingHorizontal="13dp"
                android:singleLine="true"
                android:text="Chọn trạm"
                android:textColor="@color/gray_666E79"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="Tuyến bán hàng"
                android:textColor="@color/gray_404A57"
                android:textSize="@dimen/text_14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_border_nomal"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:paddingHorizontal="13dp"
                android:singleLine="true"
                android:text="Chọn tuyến bán hàng"
                android:textColor="@color/gray_666E79"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="2dp"
                android:text="Nhân viên lái xe"
                android:textColor="@color/gray_404A57"
                android:textSize="@dimen/text_14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRequestType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_border_nomal"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:paddingHorizontal="13dp"
                android:singleLine="true"
                android:text="Chọn nhân viên lái xe"
                android:textColor="@color/gray_666E79"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="2dp"
                android:text="Trạng thái"
                android:textColor="@color/gray_404A57"
                android:textSize="@dimen/text_14sp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtStatus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/bg_border_nomal"
                android:drawableEnd="@drawable/ic_arrow_down"
                android:focusable="false"
                android:paddingHorizontal="13dp"
                android:singleLine="true"
                android:text="@string/all"
                android:textColor="@color/gray_666E79"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:text="Từ ngày"
                        android:textColor="@color/gray_404A57"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_border_nomal"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:paddingHorizontal="13dp"
                        android:singleLine="true"
                        android:text="28/10/2020"
                        android:textColor="@color/blue_2C5181"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:text="Đến ngày"
                        android:textColor="@color/gray_404A57"
                        android:textSize="@dimen/text_14sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_border_nomal"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:focusable="false"
                        android:paddingHorizontal="13dp"
                        android:singleLine="true"
                        android:text="11/11/2020"
                        android:textColor="@color/blue_2C5181"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="42dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_border_login"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm kiếm"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Danh sách yêu cầu"
                android:textColor="@color/blue_2C5181"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvKHBH"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="9dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>