                    <vn.gas.thq.customview.ItemProductType1
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:gia="100"
                        app:hinhAnh="vo"
                        app:soLuong="100"
                        app:tenSanPham="Vỏ 45Kg" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_E7E7E7" />

            <!--Mua vỏ-->
            <LinearLayout
