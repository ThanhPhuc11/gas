                    app:drawableEndCompat="@drawable/ic_arrow_down_circle" />

                <LinearLayout
                    android:id="@+id/linearThuHoiVo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.gas.thq.customview.ItemProductType2
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hinhAnh="vo"
                        app:soLuong="200"
                        app:tenSanPham="Vỏ 12Kg" />

                    <vn.gas.thq.customview.ItemProductType2
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hinhAnh="vo"
                        app:soLuong="200"
                        app:tenSanPham="Vỏ 45Kg" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_E7E7E7" />

            <!--Bán vỏ-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_11sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_15sdp">

                <TextView
                    android:id="@+id/tvLabelBanVo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bán vỏ"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_arrow_down_circle" />

                <LinearLayout
                    android:id="@+id/linearBanVo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.gas.thq.customview.ItemProductType1
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:gia="100"
                        app:hinhAnh="vo"
                        app:soLuong="100"
