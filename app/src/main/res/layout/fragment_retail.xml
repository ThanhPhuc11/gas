                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mua vỏ"
                    android:textColor="@color/blue_2C5181"
                    android:textSize="@dimen/text_16sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_arrow_down_circle" />

                <LinearLayout
                    android:id="@+id/linearMuaVo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <vn.gas.thq.customview.ItemProductType1
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:gia="100"
                        app:hinhAnh="vo"
                        app:soLuong="100"
                        app:tenSanPham="Vỏ 12Kg" />

                    <vn.gas.thq.customview.ItemProductType1
